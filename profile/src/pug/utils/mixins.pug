//- SVG Sprite mixin
mixin icon(name,mod)
  if(mod)
    svg(class="icon icon--" + name + ' ' + mod)
      use(xlink:href="img/spriteSvg.svg#sprite-" + name)
  else
    svg(class="icon icon--" + name)
      use(xlink:href="img/spriteSvg.svg#sprite-" + name)

//-Portfolio item
mixin portfolio(address, src, name)
  .portfolio__item
    a(href= address target="_blank" rel="noopener").portfolio__link
      span.portfolio__title= name
      img(src= src, alt= name).portfolio__img
