//- SVG Sprite mixin
mixin icon(name,mod)
  - mod = (' icon-' + name + '--' + mod) || ''
  svg(class="icon icon-" + name + mod)
    use(xlink:href="img/spriteSvg.svg#" + name)

//- Sidebar Item
mixin sidebar-item(mod,link,img,title,date)
  li(class='sidebar__item ' + mod)
    a(href= link class="sidebar__link")
      img(src= img, alt="preview" class="sidebar__picture")
      div.sidebar__desc
        h5.sidebar__title= title
        span.sidebar__date= date

//- Preview Medium
mixin previewM(img,category,title,date,description)
  .preview.preview--medium
    a(href="#").preview__link.preview__link--medium
      div.preview__pic.preview__pic--medium
        img(src= img, alt="alt").preview__img.preview__img--medium
        span.preview__category.preview__category--medium= category
      div.preview__text.preview__text--medium
        div.preview__text-top.preview__text-top--medium
          h5.preview__title.preview__title--medium= title
          span.preview__date.preview__date--medium= date
        p.preview__desc.preview__desc--medium= description
        
