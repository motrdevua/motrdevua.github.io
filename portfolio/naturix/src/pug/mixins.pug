//- SVG Sprite mixin
mixin icon(name,mod)
  - mod = (' icon-' + name + '--' + mod) || ''
  svg(class="icon icon-" + name + mod)
    use(xlink:href="img/spriteSvg.svg#" + name)

//- Card
mixin card(title, category, price, oldPrice, newProduct, sale)
  .cards-slider__card(data-filter=category)
    .cards-slider__photo
      if newProduct != ''
        span.product__tag.product__tag--new new
      if sale != ''
        span.product__tag.product__tag--sale sale
      img.cards-slider__img(src=('img/' + title + '.png'), alt=title)
      img.cards-slider__shape(src="img/card-shape.png", alt="shape")
      div.cards-slider__focus
        a.cards-slider__link.cards-slider__link--like(href="#")
          i.fas.fa-heart
        a.cards-slider__link.cards-slider__link--basket(href="#")
          i.fas.fa-shopping-basket
        a.cards-slider__link.cards-slider__link--size(href="#")
          i.fas.fa-expand-arrows-alt
    span.cards-slider__title organic&nbsp;
      span.cards-slider__title--bold= title
    span.cards-slider__price= price + ' '
      span.cards-slider__price--old= oldPrice

//- Prodcard
mixin prodCard (num, title, subtitle, col)
  .product-card
    img.product-card__img(src='img/product-' + num + '.png', alt="alt")
    span.product-card__line
    h5.product-card__title= title
      span.product-card__title.product-card__title--bold= subtitle
    a.product-card__link(href="#")= col

