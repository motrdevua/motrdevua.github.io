//- RandomCard
mixin randomCard(name, price)
  a.random-slider__card(href="#")
    .random-slider__pic
      img(src='img/' + name + '.png', alt=name)
    .random-slider__text
      span.random-slider__title organic&nbsp;
        span.random-slider__title.random-slider__title--bold= name
      span.random-slider__price= ' ' + price
