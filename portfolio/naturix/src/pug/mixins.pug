      a(href="#").deals-card__link.deals-card__link--like
        i.fas.fa-heart
      a(href="#").deals-card__link.deals-card__link--basket
        i.fas.fa-shopping-basket
      a(href="#").deals-card__link.deals-card__link--modal
        i.fas.fa-expand-arrows-alt
    .deals-card__content
      .deals-card__subtitle= subtitle
      .deals-card__title= title + ' '
        span.deals-card__title.deals-card__title--bold= titleBold
      .deals-card__desc
        | Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy...
      span.deals-card__price= price + ' '
        span.deals-card__price--old= oldPrice
    .deals-card__right
      .deals-card__label
        if newProduct != ''
          span.deals-card__tag.deals-card__tag--new new
        if sale != ''
          span.deals-card__tag.deals-card__tag--sale sale
      .deals-card__pic(class= 'deals-card__pic--' + titleBold)
